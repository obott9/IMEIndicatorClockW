<UserControl x:Class="IMEIndicatorClock.Views.ColorPickerButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root">

    <Button Click="Button_Click" Padding="5" MinWidth="60">
        <StackPanel Orientation="Horizontal">
            <Border Width="20" Height="20" CornerRadius="3"
                    BorderBrush="Gray" BorderThickness="1"
                    Background="{Binding SelectedBrush, ElementName=Root}"/>
            <TextBlock Text="{Binding ColorHex, ElementName=Root}"
                       Margin="5,0,0,0" VerticalAlignment="Center"
                       FontSize="11"/>
        </StackPanel>
    </Button>
</UserControl>
