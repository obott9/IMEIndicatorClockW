<Window x:Class="IMEIndicatorClock.Views.ColorPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="色を選択"
        Width="350" Height="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- プレビュー -->
        <Border Grid.Row="0" Height="50" CornerRadius="5"
                BorderBrush="Gray" BorderThickness="1"
                Background="{Binding PreviewBrush, RelativeSource={RelativeSource AncestorType=Window}}"
                Margin="0,0,0,15"/>

        <!-- カラーパレット -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- プリセットカラー -->
            <TextBlock Grid.Row="0" Text="プリセット" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <WrapPanel Grid.Row="1" x:Name="PresetColors"/>
        </Grid>

        <!-- RGB スライダー -->
        <StackPanel Grid.Row="2" Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="R" VerticalAlignment="Center" Foreground="Red"/>
                <Slider Grid.Column="1" x:Name="SliderR" Minimum="0" Maximum="255"
                        Value="{Binding RedValue, RelativeSource={RelativeSource AncestorType=Window}}"
                        ValueChanged="Slider_ValueChanged"/>
                <TextBox Grid.Column="2" Text="{Binding RedValue, RelativeSource={RelativeSource AncestorType=Window}, UpdateSourceTrigger=PropertyChanged}"
                         TextChanged="TextBox_TextChanged" Margin="5,0,0,0"/>
            </Grid>

            <Grid Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="G" VerticalAlignment="Center" Foreground="Green"/>
                <Slider Grid.Column="1" x:Name="SliderG" Minimum="0" Maximum="255"
                        Value="{Binding GreenValue, RelativeSource={RelativeSource AncestorType=Window}}"
                        ValueChanged="Slider_ValueChanged"/>
                <TextBox Grid.Column="2" Text="{Binding GreenValue, RelativeSource={RelativeSource AncestorType=Window}, UpdateSourceTrigger=PropertyChanged}"
                         TextChanged="TextBox_TextChanged" Margin="5,0,0,0"/>
            </Grid>

            <Grid Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="B" VerticalAlignment="Center" Foreground="Blue"/>
                <Slider Grid.Column="1" x:Name="SliderB" Minimum="0" Maximum="255"
                        Value="{Binding BlueValue, RelativeSource={RelativeSource AncestorType=Window}}"
                        ValueChanged="Slider_ValueChanged"/>
                <TextBox Grid.Column="2" Text="{Binding BlueValue, RelativeSource={RelativeSource AncestorType=Window}, UpdateSourceTrigger=PropertyChanged}"
                         TextChanged="TextBox_TextChanged" Margin="5,0,0,0"/>
            </Grid>

            <!-- HEX入力 -->
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="HEX" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" x:Name="HexTextBox"
                         Text="{Binding HexValue, RelativeSource={RelativeSource AncestorType=Window}, UpdateSourceTrigger=PropertyChanged}"
                         TextChanged="HexTextBox_TextChanged"/>
            </Grid>
        </StackPanel>

        <!-- ボタン -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="OK" Width="80" Click="OkButton_Click" IsDefault="True"/>
            <Button Content="キャンセル" Width="80" Margin="10,0,0,0" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
