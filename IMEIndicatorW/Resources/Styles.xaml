<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:IMEIndicatorClock.Resources">

    <!-- コンバーター -->
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    <converters:FontSizeReducerConverter x:Key="FontSizeReducerConverter"/>
    <converters:DisplayModeToTimeVisibilityConverter x:Key="DisplayModeToTimeVisibilityConverter"/>
    <converters:DisplayModeToDateVisibilityConverter x:Key="DisplayModeToDateVisibilityConverter"/>
    <converters:ClockStyleToDigitalVisibilityConverter x:Key="ClockStyleToDigitalVisibilityConverter"/>
    <converters:ClockStyleToAnalogVisibilityConverter x:Key="ClockStyleToAnalogVisibilityConverter"/>

    <!-- 基本スタイル -->
    <Style TargetType="Button">
        <Setter Property="Padding" Value="15,8"/>
        <Setter Property="Background" Value="#3B82F6"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="5"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#2563EB"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#1D4ED8"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Padding" Value="8,6"/>
        <Setter Property="BorderBrush" Value="#CBD5E1"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="White"/>
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="#3B82F6"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Slider">
        <Setter Property="Margin" Value="0,5"/>
    </Style>

    <Style TargetType="TabItem">
        <Setter Property="Padding" Value="15,8"/>
    </Style>

</ResourceDictionary>
